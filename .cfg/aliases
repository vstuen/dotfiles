alias con='vim $HOME/.i3/config'
alias comp='vim $HOME/.config/compton.conf'
alias fixit='sudo rm -f /var/lib/pacman/db.lck'
alias inst='sudo pacman -S'
alias la='ls -lha --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
alias ll='ls -lh --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
alias mirrors='sudo pacman-mirrors -g'
alias printer='system-config-printer'
alias update='yaourt -Syua'
alias free="free -m"
alias df="df -h"
alias ls="ls --color=auto"
alias diff="diff --color=auto"
alias grep="grep --color=auto"
alias rmf="rm -rf"
alias mkd="mkdir"
alias cclip="xclip -selection c"
alias pclip="xclip -o"
alias config='/usr/bin/git --git-dir=$HOME/.cfg.git/ --work-tree=$HOME'
alias cd..='cd ..'

# Calendar format
alias cal='cal -w'

# Custom aliases for scripts etc.
alias jsonformat="jq '.'"
alias xmlformat='xmllint --format -'
alias xevkeys="xev -event keyboard | grep -A2 KeyPress"
alias top=htop
